<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.bookapplication.views.fragment.catalog.BooksCatalogViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragment.catalog.BooksCatalogFragment">

        <ProgressBar
            android:id="@+id/catalog_progress_bar"
            android:layout_width="@dimen/image_view_size"
            android:layout_height="@dimen/image_view_size"
            android:visibility="@{viewModel.progressState ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/middle_margin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/middle_margin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/middle_margin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/middle_margin" />

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/EditTextStyle"
            android:id="@+id/search_edit_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/edit_text_size"
            android:layout_marginEnd="@dimen/middle_margin"
            android:autofillHints="@string/search_edit_text"
            android:background="@color/grey_light"
            android:hint="@string/search_edit_text"
            android:inputType="text"
            android:padding="@dimen/small_margin"
            app:layout_constraintBottom_toBottomOf="@+id/search_button"
            app:layout_constraintEnd_toStartOf="@+id/search_button"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toTopOf="@+id/top_guideline" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/catalog_button_name"
            app:layout_constraintRight_toRightOf="@id/right_guideline"
            app:layout_constraintTop_toTopOf="@id/top_guideline" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/catalog_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"
            app:layout_constraintEnd_toStartOf="@+id/right_guideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/search_button"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/free_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="@string/free_books_title" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/free_book_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recycler_view_height"
                android:overScrollMode="never"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_weight="1" />

            <View
                android:id="@+id/books_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_small_height"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@color/black" />

            <TextView
                android:id="@+id/paid_books_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="@string/paid_books_title" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/paid_books_recycler_view"
                android:layout_width="match_parent"
                android:overScrollMode="never"
                android:layout_height="@dimen/recycler_view_height"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_weight="1" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>